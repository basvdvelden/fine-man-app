<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.overview.OverviewFragment">

    <TextView
        android:id="@+id/bankAccountsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank_accounts_title_text"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/bank_account_balances"
        app:layout_constraintStart_toStartOf="@+id/bank_account_balances" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bank_account_balances" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bank_account_balances"
        android:layout_width="304dp"
        android:layout_height="254dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37"
        tools:itemCount="4"
        tools:listitem="@layout/bank_account_balance_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>