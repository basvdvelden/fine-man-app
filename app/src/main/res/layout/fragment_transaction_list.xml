<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_swipe_refresh"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transaction_list"
        android:name="nl.management.finance.app.ui.overview.transactions.TransactionFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.transactions.TransactionFragment"
        tools:listitem="@layout/fragment_transaction" />

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
